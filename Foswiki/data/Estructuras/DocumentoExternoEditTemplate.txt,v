%JQREQUIRE{"maskedinput"}%
<script type="text/javascript">
var Nombre;
var Fuente;
var FechaExpedicion;
var FechaCaducidad;
var Responsable;
var Proceso;
var Estado;
$(function (){
       Nombre = "%ENCODE{"%FORMFIELD{Nombre}%" type="quotes"}%";
       Fuente = "%ENCODE{"%FORMFIELD{Fuente}%" type="quotes"}%";
       FechaExpedicion = "%ENCODE{"%FORMFIELD{FechaExpedicion}%" type="quotes"}%";
       FechaCaducidad = "%ENCODE{"%FORMFIELD{FechaCaducidad}%" type="quotes"}%";
       Responsable = "%ENCODE{"%FORMFIELD{Responsable}%" type="quotes"}%";
       Proceso = "%ENCODE{"%FORMFIELD{Proceso}%" type="quotes"}%";
       Estado = "%ENCODE{"%FORMFIELD{Estado}%" type="quotes"}%";
       $('[name=Nombre]').val(Nombre);
       $('[name=Fuente]').val(Fuente);
       $('[name=FechaExpedicion]').val(FechaExpedicion);
       $('[name=FechaCaducidad]').val(FechaCaducidad);
       $('[name=Responsable]').val(Responsable);
       $('[name=Proceso]').val(Proceso);
       $('[name=Estado]').val(Estado);
       toggleItemObsoletoField();
       $('#estado').change(function (){
              toggleItemObsoletoField();
       });
});
function toggleItemObsoletoField (){
        if($('#estado').val() == 'Obsoleto-parcial') {
              $('#itemsobsoletos').attr('disabled', false);
              $('#itemsobsoletos').css('background-color', '#fff');
        }else{
              $('#itemsobsoletos').attr('disabled', true);
              $('#itemsobsoletos').css('background-color', '#d7d7d7');
        }
}
</script>
